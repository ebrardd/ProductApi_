  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Core(api)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/ProductApi_/bin/Debug/net8.0/ProductApi_.dll",
      "args": [],
      "cwd": "${workspaceFolder}/ProductApi_",
      "justMyCode": false,
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(http?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    }
  ]
}
